@page
@model IDPModel
@{
    ViewData["Title"] = "Document Classification";
}

<div>
    <h2 class="display-4">Document Classification</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FormFile" class="control-label">Document:</label>
            <input asp-for="FormFile" class="form-control" type="file" />
        </div>
        <div class="form-group pt-3">
            <input type="submit" class="btn btn-primary" asp-page-handler="PrepareData" value="1 - Prepare training data" />
            <input type="submit" class="btn btn-primary" asp-page-handler="CreateClassifier" value="2 - Create classifier" />
            <input type="submit" class="btn btn-primary" asp-page-handler="DetectDocumentType" value="3 - Detect document type" />
        </div>
    </form>
    
    <div class="container">
            <div class="row">
                <div class="col-6 pt-3">
                    @if (!string.IsNullOrEmpty(Model.FileName))
                    {
                        <img class="w-100" src="uploads/@Model.FileName" />
                    }
                </div>
                <div class="col-6 pt-3">
                    @Html.Raw(Model.Result)
                </div>
            </div>
        </div>

</div>